			3dcalc -a _temp_ROI_mask+orig. -expr 'a*11' -prefix   _temp_ROI_mask_collapse_value
			3dcalc -a  _temp_ROI_atlas+orig. -b _temp_ROI_mask_collapse_value+orig. -expr 'a+b' -prefix   ${subj}${session}.${run}_anat_seg_ed1

