#!/bin/tcsh
# Instructions just dump the ROIs files NAME_seg and NAME_right_seg into a directory called atlas_relabel the execute ./@atlas_relabel. Of course change name of subject,session and run

set subj = 'Daphne.'
set session = 'Ip1'
set run = '6'



AL.S1.R1.anat_right_seg+orig.

# Se up path to the data
	set npath = '~/Desktop/natural-connectivity-master/data/atlas_relabel'
	  cd ${npath}
		foreach subj (DP VL)
		 cd ${subj}
		  foreach session (S1 S2)
		   cd ${session}
	            foreach run (R1)

			cp ../../../../scripts/prepro_scripts/relabel ./ 
			3dcopy ../../../parc/${subj}/${session}/${subj}.${session}.${run}.anat_seg+orig. \
			./${subj}.${session}.${run}.anat_seg

			rm _temp*

			#--------------------------------collapse some ROIs prefrontal area 24-------------------
			3dcalc -a ${subj}${session}.${run}_anat_seg+orig. -expr 'amongst(a,11,186,185,49,187,98)' -prefix   _temp_ROI_mask
			3dcalc -a  _temp_ROI_mask+orig. -b ${subj}${session}.${run}_anat_seg+orig. -expr 'a*b' -prefix   _temp_ROI_mask_value
